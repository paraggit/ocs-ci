# yaml-language-server: $schema=../plugin.schema.json
- id: kill-pods
  config:
    namespace_pattern: {{ namespace_pattern | default("^openshift-storage$") }}
    name_pattern: {{ name_pattern | default(".*") }}
    kill: {{ kill | default(3) }}
    krkn_pod_recovery_time: {{ krkn_pod_recovery_time | default(300) }}
