# yaml-language-server: $schema=../plugin.schema.json
# Unified Container Chaos Scenarios - Multiple components in one config
scenarios:
{%- for scenario in scenarios %}
  - name: "{{ scenario.name }}"
    namespace: "{{ scenario.namespace }}"
    label_selector: "{{ scenario.label_selector }}"
    container_name: "{{ scenario.container_name }}"
    kill_signal: "{{ scenario.kill_signal }}"
    count: {{ scenario.count }}
    expected_recovery_time: {{ scenario.expected_recovery_time }}
{%- endfor %}
